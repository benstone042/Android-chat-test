<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginEnd="80dp"
    android:layout_marginStart="10dp"
    android:layout_marginTop="8dp"
    android:background="@drawable/rounded_corner_other"
    android:layout_marginRight="80dp"
    android:layout_marginLeft="10dp">
    <LinearLayout
        android:id="@+id/pic"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="40dp"
        android:layout_gravity="center_vertical"
        android:layout_height="40dp"
        android:layout_marginLeft="16dp"
        android:id="@+id/image2"

        />
    </LinearLayout>
    <RelativeLayout
        android:layout_marginLeft="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/message_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/message"
        android:paddingStart="5dp"
        android:textColor="@color/colorAccent"
        android:textSize="14sp"
        android:text="benstone"
        android:layout_alignLeft="@+id/message"
        android:paddingLeft="5dp" />

    <TextView
        android:id="@+id/message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/message_user_name"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/message_user_name"
        android:paddingEnd="5dp"
        android:textSize="13sp"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/message_user_name"
        android:paddingRight="5dp" />

    <ImageView
        android:id="@+id/fav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:tint="@android:color/darker_gray"
        android:src="@drawable/ic_favorite_white_24dp"/>

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/message_user_name"
        android:layout_marginTop="5dp"
        android:paddingEnd="5dp"
        android:paddingStart="5dp"
        android:textColor="#000"
        android:textSize="16sp"
        android:text="jhkjbjgjhvhjvhbljblj,bjbbjjbjbjjbjjjbjbjbjb"
        android:layout_alignParentLeft="true" />
    </RelativeLayout>
</LinearLayout>